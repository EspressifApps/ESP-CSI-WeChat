.item {
  width: 100%;
  background: #fff;
}
.item-content {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #f6f6f6;
}
.name,
.icon-right {
  color: #999;
}
.title {
  padding: 50rpx 0 30rpx 30rpx;
  width: 100%;
  text-align: left;
  box-sizing: border-box;
}
.img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
}